az monitor metrics alert create --name CPU-High-Alert --resource-group Desafio-RG --scopes "/subscriptions/{SUBSCRIPTION_ID}/resourceGroups/Desafio-RG/providers/Microsoft.Compute/virtualMachines/VM-Web" --condition "avg Percentage CPU > 80" --window-size 5m --evaluation-frequency 1m --action-group "/subscriptions/{SUBSCRIPTION_ID}/resourceGroups/Desafio-RG/providers/microsoft.insights/actionGroups/MeuActionGroup"